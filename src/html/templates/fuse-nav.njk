<h4>More from the series</h4>
<div class="fuse-read-more" data-market="charlotteobserver">
    {% for story in stories %}
    <article class="card">
        <figure>
            <a href="{{story.URL}}">
                <img src="{{story.IMG}}" alt="Related story image">
            </a>
        </figure>
        <div class="package">
            <h3><a class="nav-link" href="{{story.URL}}" data-title="{{story.TITLE}}" data-head="{{story.HEADLINE}}">{{story.HEADLINE}}</a></h3>
            <time>{{story.PUBDATE}}</time>
        </div>
    </article>
    {%endfor%}
</div>